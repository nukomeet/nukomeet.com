#!/usr/bin/env ruby

require 'set'

preprocess do
  tags = Set.new
  authors = Set.new

  items.each do |item|
    tags.merge(item[:tags] || ['business', 'programming', 'innovation', 'society', 'technology', 'web', 'meetup'])
    authors.merge(item[:authors] || [])
  end

  tags.each do |tag|
    items.create("", { tag: tag }, "/nulog/#{tag}.txt")
  end

  authors.each do |author|
    items.create("", { author: author }, "/nulog/#{author}.txt")
  end
end

passthrough '/assets/fonts/**/*'
ignore '/assets/stylesheets/_lib/**/*'

compile '/static/**/*' do
end

route '/static/**/*' do
  item.identifier.to_s.sub(/\A\/static/, '')
end

compile '/assets/stylesheets/{styles,ie}.*' do
  filter :less
  filter :rainpress
end

compile '/assets/fonts/**/*' do
end

compile '/assets/javascripts/**/*' do
  filter :uglify_js
end

compile '/assets/images/**/*' do
end

compile '/nulog/{business,programming,innovation,society,technology,web,meetup}.*' do
  layout '/blog.*'
  layout '/default.*'
end

compile '/nulog/{zaiste,albanlv,julien,adrien,tukan,tomkuk,kasia,adam}.*' do
  layout '/author.*'
  layout '/default.*'
end

compile '/nulog.*' do
  filter :slim
  layout '/default.*'
end

compile '/blog/**/*' do
  filter :rdiscount, :extensions => %w( strict smart )
  layout '/post.*'
  layout '/default.*'
end

compile '/projects/**/*' do
  filter :rdiscount, :extensions => %w( strict smart )
  layout '/project.*'
  layout '/default.*'
end

compile '/blast.*' do
  filter :slim
  layout '/default.*'
end

compile '/contact.*' do
  filter :slim
  layout '/default.*'
end

compile '/sitemap.*' do
  # FIXME: slim escapes all output
  filter :slim
end

compile '/**/*' do
  ext = item[:extension].nil? ? nil : item[:extension].split('.').last

  if item.binary?
    # donâ€™t filter binary items
  elsif ext == 'md' || ext == 'markdown'
    filter :erb
    filter :rdiscount
    layout '/blog.*'
    layout '/default.*'
  elsif ext == 'less'
    # do nothing as it should be filtered somewhere before
  else
    filter :slim
    layout '/default.*'
  end
end

route '/assets/stylesheets/{styles,ie}.*' do
  item.identifier.with_ext('css')
end

route '/assets/javascripts/**/*' do
  item.identifier.with_ext('.js')
end

route '/assets/images/**/*' do
  item.identifier.to_s
end

route '/blog/**/*' do
  item.identifier.to_s.gsub(%r{^/blog/(\d+)-(\d+)_(.*)\..*$}) do |match|
    "/#{$1}/#{$2}/#{$3}" + '/index.html'
  end
end

route '/sitemap.*' do
  item.identifier.with_ext('xml')
end

route '/index.*' do
  '/index.html'
end

route '/**/*' do
  if item.binary?
    # Write item with identifier /foo.dat to /foo.dat
    item.identifier.to_s
  else
    # Write item with identifier /foo.md to /foo/index.html
    item.identifier.without_ext + '/index.html'
  end
end

layout '/**/*', :slim
